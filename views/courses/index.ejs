<% layout('layouts/boilerplate')%>
<h1 class="mt-5"> All Courses</h1>
<div>
    <a class="btn btn-primary mt-4 mb-4" href="/courses/new">Create New Course</a>
</div>

<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4 mb-5">
    <% for (let course of courses){ %>
    <div class="col">
      <div class="card h-100">
        <img src=<%= course.image %> class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title"><%= course.code %></h5>
          <a href="/courses/<%=course._id%>" class="stretched-link card-text" style="text-decoration: none; color: inherit;"> <%= course.name %></a>
        </div>
      </div>
    </div>
    <% } %>
  </div>




